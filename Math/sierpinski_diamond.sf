#!/usr/bin/ruby

func sierpinski_diamond(n) {
    var triangle = ['*'];
    { |i|
        var sp = (' ' * Math.pow(2, i-1));
        triangle = (triangle.map {|x| sp + x + sp } +
                    triangle.map {|x| x + ' ' + x } +
                    triangle.map {|x| sp + x + sp} );
    } * n;
    triangle.join("\n");
}

say sierpinski_diamond(2);
