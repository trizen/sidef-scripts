#!/usr/bin/ruby

const tau = Num.tau

func bern_asym(n) {
    (2 * n!) / tau**n
}

for n in (0..10) {
    if (n == 1) {
        say "bern(#{n}) = #{(tau/4 * bern_asym(n))}"
    }
    else {
        say "bern(#{n}) = #{((-1)**(n/2 + 1) * zeta(n) * bern_asym(n))}"
    }
}

