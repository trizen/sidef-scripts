# Find a solution to a^b^c^...^(z^z) = n, for a tower of k distinct powers.

func tower_of_powers(n, k) {
    gather {
        k.times {
            take(n = n.lgrt)
        }
    }
}

var arr = tower_of_powers(2, 10)

with ('a') {|l|

    arr.each {|x|
        say "#{l++} = #{x}"
    }

    say "\nResult for a^b^c^...^z:"
    say arr.flip.reduce{|a,b|
        b**a
    }

    arr << arr.last
    say "\nResult for a^b^c^...^(z^z):"
    say arr.flip.reduce{|a,b|
        b**a
    }
}

