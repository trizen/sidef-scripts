# Compute the first k digits of the n-th Fibonacci number, in base b.

func nth_fib_first_k_digits(n,k,b=10) {
    floor(b**(k-1) * exp(n*log((1+sqrt(5))/2) - log(b)*floor((n*log((1+sqrt(5))/2) - log(5)/2)/log(b)))/sqrt(5)).to_i
}

for k in (16, 32, 64) {
    printf("First 20 digits of F(2^#{k}) = %s (base 10) = %s (base 7)\n", nth_fib_first_k_digits(2**k, 20), nth_fib_first_k_digits(2**k, 20, 7).base(7))
}

