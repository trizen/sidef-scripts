# Simple series representations for the complex zeta function `zeta(r + t*i)`.

var r = 3
var t = 4

var l = 1000

say sum(1..l, {|n|
    1/(n**(r + t.i))
})

say sum(1..l, {|n|
    (cos(log(n) * t) - sin(log(n) * t).i) / n**r
})

say sum(1..l, {|n|
    ((n**(-t.i) + n**(t.i))/2 - ((n**(t.i) - n**(-t.i))/(2i)).i) / n**r
})

say sum(1..l, {|n|
    ((exp(log(n) * (-t.i)) + exp(log(n) * (t.i)))/2 - ((exp(log(n) * (t.i)) - exp(log(n) * (-t.i)))/(2i)).i) / exp(log(n) * r)
})

