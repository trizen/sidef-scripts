#!/usr/bin/ruby

# The derivatives ζ'(−2n) at trivial zeros.

define π = Num.pi

func zeta_derivative_trivial_zero(n) {
    (-1)**n * zeta(2*n + 1) * ((2*n)!) / 2**(2*n + 1) / π**(2*n)
}

each(1..10, {|n|
    say "zeta'(#{'%3s' % -2*n}) =~ #{zeta_derivative_trivial_zero(n)}"
})

