# Implementation for the digamma(n) function.

# See also:
#   https://en.wikipedia.org/wiki/Digamma_function

define γ = Num.Y

func digamma(n) {
    -γ - ::sum(1 ..^ n, { |k|
        ((-1)**k / k) * binomial(n-1, k)
    })
}

say digamma(100)    #=> 4.60016185273808740019860558557585072686681279076853
