#!/usr/bin/ruby

#
## http://rosettacode.org/wiki/Sorting_algorithms/Counting_sort
#

func counting_sort(a, min, max) {
    var cnt = ([0] * (max - min + 1));
    a.each { |i| cnt[i-min]++ };
    return cnt.map {|i| min++; [min-1] * i}.sum;
}
